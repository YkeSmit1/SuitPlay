<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="using:SuitPlay.ViewModels"
             x:Class="SuitPlay.Pages.SettingsPage"
             x:DataType="viewModels:SettingsViewModel">
    <ContentPage.BindingContext>
        <viewModels:SettingsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid ColumnDefinitions="200, *" RowDefinitions="auto, auto, auto, auto, auto" Padding="20, 20, 20, 20">
            <Label Grid.Column="0" Grid.Row="0" Text="Developer mode"></Label>
            <Switch Grid.Column="1" Grid.Row="0" IsToggled="{Binding DeveloperMode}" />
            <Label Grid.Column="0" Grid.Row="1" Text="Show Only Lines In SuitPlay"/>
            <Switch Grid.Column="1" Grid.Row="1" IsToggled="{Binding OnlyLinesInSuitPlay}" 
                    IsEnabled="{Binding DeveloperMode}"/>
            <Label Grid.Column="0" Grid.Row="2" Text="Show Only Combinations In SuitPlay"/>
            <Switch Grid.Column="1" Grid.Row="2" IsToggled="{Binding OnlyCombinationsInSuitPlay}" 
                    IsEnabled="{Binding DeveloperMode}"/>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>
