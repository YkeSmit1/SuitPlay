<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SuitPlay.Views"
             x:Class="SuitPlay.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Border>
                <views:HandView x:Name="Cards"/>
            </Border>
            <Border>
                <views:HandView x:Name="North" BackgroundColor="Blue"/>
            </Border>
            <Button Text="North" Clicked="ButtonSelectNorth_OnClicked"></Button>
            <Border>
                <views:HandView x:Name="South" BackgroundColor="DarkGreen"/>
            </Border>
            <Button Text="South" Clicked="ButtonSelectSouth_OnClicked" ></Button>
            <Button Text="Reset" Clicked="ResetButton_OnClicked"></Button>
            <Button Text="Calculate" Clicked="CalculateButton_OnClicked"></Button>
            <Label x:Name="BestPlay"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
